{
    "window.commandCenter": false,
    "files.autoSave": "afterDelay",
    "workbench.tree.indent": 16,
    "editor.showFoldingControls": "always",
    "cursor.cpp.enablePartialAccepts": true,
    "git.autofetch": true,
    "vs-kubernetes": {
        "vs-kubernetes.crd-code-completion": "enabled"
    },
    "workbench.activityBar.orientation": "vertical",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.venv": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true,
        "**/*.pyc": true,
        "**/.idea": true
    },
    // File watching exclusions for better performance
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.hg/store/**": true,
        "**/.venv/**": true,
        "**/venv/**": true,
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
        "**/.mypy_cache/**": true,
        "**/.ruff_cache/**": true,
        "**/dist/**": true,
        "**/build/**": true,
        "**/.next/**": true,
        "**/.nuxt/**": true,
        "**/out/**": true,
        "**/*.egg-info/**": true
    },
    // Search exclusions
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.git": true,
        "**/.venv": true,
        "**/venv": true,
        "**/dist": true,
        "**/build": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true,
        "**/coverage": true,
        "**/.next": true,
        "**/out": true
    },
    "editor.semanticHighlighting.enabled": true,
    "workbench.colorCustomizations": {
        "[AnySphere Dark]": {
            "terminal.foreground": "#c5c8c6",  // General text color
            "terminal.background": "#1d1f21",  // Background color
            "terminalCursor.foreground": "#c5c8c6",  // Cursor color
            "terminalCursor.background": "#c5c8c6",  // Cursor color
            "terminal.ansiBlack": "#1d1f21",   // Black text
            "terminal.ansiRed": "#cc6666",     // Red text
            "terminal.ansiGreen": "#b5bd68",   // Green text
            "terminal.ansiYellow": "#f0c674",  // Yellow text
            "terminal.ansiBlue": "#81a2be",    // Blue text
            "terminal.ansiMagenta": "#b294bb", // Magenta text
            "terminal.ansiCyan": "#8abeb7",    // Cyan text
            "terminal.ansiWhite": "#ffffff",   // White text
            "terminal.ansiBrightBlack": "#666666",  // Bright black (grey)
            "terminal.ansiBrightRed": "#d54e53",    // Bright red
            "terminal.ansiBrightGreen": "#b9ca4a",  // Bright green
            "terminal.ansiBrightYellow": "#e7c547", // Bright yellow
            "terminal.ansiBrightBlue": "#7aa6da",   // Bright blue
            "terminal.ansiBrightMagenta": "#c397d8",// Bright magenta
            "terminal.ansiBrightCyan": "#70c0b1",   // Bright cyan
            "terminal.ansiBrightWhite": "#eaeaea"   // Bright white
        }
    },
    "terminal.integrated.defaultProfile.linux": "",
    "terminal.integrated.localEchoStyle": "dim",
    "git.openRepositoryInParentFolders": "never",
    "workbench.editor.tabSizingFixedMinWidth": 80,
    "go.toolsManagement.autoUpdate": true,
    "diffEditor.renderSideBySide": false,
    "diffEditor.useInlineViewWhenSpaceIsLimited": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "diffs.useCharacterLevelDiffs": true,
    "cursor.cmdk.useThemedDiffBackground": true,
    "workbench.statusBar.visible": false,
    "terminal.integrated.enableImages": true,
    "terminal.integrated.gpuAcceleration": "on",
    "python.terminal.activateEnvironment": false,
    "python.experiments.optOutFrom": [
        "pythonTerminalEnvVarActivation"
    ],
    "workbench.activityBar.location": "top",
    
    "markdown-pdf.styles": [
        ".vscode/custom-markdown-pdf.css"
    ],
    
    "markdown-pdf.headerTemplate": "<div></div>",
    "markdown-pdf.margin.bottom": "2 cm",
    "markdown-pdf.footerTemplate": "<div style=\"font-size: 9px; font-family: Arial, sans-serif; display: flex; justify-content: space-between; width: 100%; padding: 0 30px;\"><div style=\"flex: 1;\"></div><div style=\"flex: 1; text-align: center;\">Proprietary RFI Response - 10xr</div><div style=\"flex: 1; text-align: right;\"><span class=\"pageNumber\"></span></div></div>",
    
    "python.createEnvironment.trigger": "off",
    "svg.preview.mode": "img",
    "cursor.composer.shouldChimeAfterChatFinishes": true,
    "makefile.configureOnOpen": true,
    "color-highlight.matchHslWithNoFunction": true,
    "update.releaseTrack": "prerelease",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "diffEditor.experimental.showMoves": true,
    "workbench.fontAliasing": "auto",
    // For the code editor
    "editor.fontFamily": "'MesloLGS NF', monospace",
    "editor.fontSize": 13,
    "editor.lineHeight": 20,
    "editor.fontLigatures": false,
    "editor.fontWeight": "normal",

    // Smooth rendering
    "editor.fontAliasing": "antialiased",
    "terminal.integrated.fontWeight": "normal",

    // Claude Code / Chat
    "chat.editor.fontFamily": "'DejaVu Sans Mono'",
    "chat.editor.fontSize": 14,
    "chat.editor.fontWeight": "normal",
    "terminal.external.osxExec": "iTerm",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontLigatures.enabled": true,
    "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
    "javascript.updateImportsOnFileMove.enabled": "always",
    // turn the feature on
    "workbench.editor.limit.enabled": true,

    // total per editor group (true) or across the whole window (false)
    "workbench.editor.limit.perEditorGroup": false,

    // max open editors before VS Code auto-closes the least-recently-used
    "workbench.editor.limit.value": 16,

    // optional: never auto-close dirty (unsaved) editors
    "workbench.editor.limit.excludeDirty": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreviewFromCodeNavigation": false,
    "chat.agent.enabled": false,
    "explorer.decorations.colors": true,
    "explorer.decorations.badges": true,
    "git.decorations.enabled": true,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.minimap.showSlider": "always",
    "editor.minimap.enabled": false,
    "chat.disableAIFeatures": true,
    "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
    "explorer.confirmDragAndDrop": false,
    "redhat.telemetry.enabled": false,

    // Python/Pylance Performance Optimizations
    "python.analysis.exclude": [
        "**/node_modules",
        "**/__pycache__",
        "**/.venv",
        "**/venv",
        "**/dist",
        "**/build",
        "**/.pytest_cache",
        "**/.mypy_cache",
        "**/.ruff_cache"
    ],
    "python.analysis.ignore": [
        "**/node_modules",
        "**/.venv",
        "**/venv"
    ],
    "python.analysis.autoSearchPaths": false,
    "python.analysis.indexing": true,

    // TypeScript/JavaScript Performance
    "typescript.tsserver.maxTsServerMemory": 4096,
    "typescript.disableAutomaticTypeAcquisition": false,
    "typescript.tsserver.watchOptions": {
        "excludeDirectories": [
            "**/node_modules",
            "**/dist",
            "**/build",
            "**/.next",
            "**/out"
        ]
    },
    "javascript.preferences.importModuleSpecifierEnding": "auto",

    // Go Language Server - optimized for performance
    "go.buildOnSave": "off",  // Don't build automatically (gopls does type checking)
    "go.vetOnSave": "off",    // gopls runs vet automatically
    "go.lintOnSave": "workspace",  // Run linter on save for current package
    "go.useLanguageServer": true,  // Use gopls (modern, faster)
    "go.lintTool": "golangci-lint",  // Best all-in-one linter
    "go.lintFlags": [
        "--fast"  // Faster mode for on-save linting
    ],
    "gopls": {
        "ui.semanticTokens": true,
        "ui.completion.usePlaceholders": true,
        "analyses": {
            "unusedparams": true,
            "shadow": true
        },
        // Performance: don't analyze test files in dependencies
        "staticcheck": true,
        "buildFlags": []
    },
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.blame.highlight.enabled": false,
    "gitlens.blame.avatars": false,
    "gitlens.blame.compact": true,

    // File Performance
    "files.maxMemoryForLargeFilesMB": 4096,
    "files.associations": {
        "*.json": "jsonc"
    },

    // Editor Performance
    "editor.suggest.maxVisibleSuggestions": 8,
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.quickSuggestionsDelay": 10,

    // Disable telemetry for performance
    "telemetry.telemetryLevel": "off",

    // YAML Language Server
    "yaml.maxItemsComputed": 5000,
    "yaml.schemaStore.enable": true,

    // Docker extension performance
    "docker.commands.build": "${containerCommand} build --pull --rm -f \"${dockerfile}\" -t ${tag} \"${context}\"",
    "docker.dockerPath": "docker",
    "gitlens.heatmap.locations": [
        "gutter",
        "overview"
    ],
    "containers.commands.build": "${containerCommand} build --pull --rm -f \"${dockerfile}\" -t ${tag} \"${context}\"",
    "containers.containerCommand": "docker",
    "diffEditor.maxComputationTime": 0
}

